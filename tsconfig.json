{
  "extends": "./tsconfig.build.json",

  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@cisl/io/*": ["packages/io/src/*"],
      "@cisl/io": ["packages/io/src"],
      "@cisl/io-display/*": ["packages/io-display/src/*"],
      "@cisl/io-display": ["packages/io-display/src"],
    },
    "esModuleInterop": true,
    "noEmit": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "packages/*/dist"
  ]
}
