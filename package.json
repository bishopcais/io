{
  "name": "io",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "docs": "typedoc --exclude \"packages/*/dist/**/*.ts\" --entryPointStrategy packages . && cp -R img docs/",
    "io:build": "yarn workspace @cisl/io build",
    "io-celio-speaker:build": "yarn workspace @cisl/io-celio-speaker build",
    "io-celio-transcript:build": "yarn workspace @cisl/io-celio-transcript build",
    "io-display:build": "yarn workspace @cisl/io-display build",
    "io-speaker:build": "yarn workspace @cisl/io-speaker build",
    "build": "yarn io:build && yarn io-celio-speaker:build && yarn io-celio-transcript:build && yarn io-display:build && yarn io-speaker:build",
    "lint": "eslint packages/*/src/**/*.ts packages/*/test/**/*.ts",
    "test": "jest"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "dependencies": {
    "@masterodin/eslint-config-typescript": "^3.1.1",
    "@masterodin/publisher": "^0.9.0",
    "@types/jest": "^26.0.4",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "bluebird": "^3.7.2",
    "eslint": "^7.1.0",
    "jest": "^27.0.6",
    "ts-jest": "^27.0.3",
    "typedoc": "^0.22.4",
    "typescript": "^4.4.3"
  },
  "devDependencies": {
    "fs-extra": "^10.0.0",
    "rimraf": "^3.0.2"
  }
}
